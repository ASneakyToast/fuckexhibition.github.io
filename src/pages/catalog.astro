---
import BaseLayout from "../layouts/BaseLayout.astro";

---

<BaseLayout title="F*CK! | Catalog">
  <section class="intro">
    <h1>Catalog</h1>
    <img src="/graphics/catalog-text_graphic.png" />
  </section>

  <section class="contents-preview">
    <h2>Contents</h2>
    <article>
        <h3><i>"Closer Encounters"</i></h3>
        <h4><i>by Samantha Hiura</i></h4>
    </article>
    <article>
      <h3><i>"Unmentionables"</i></h3>
      <h4><i>by Sloane Holzer</i></h4>
    </article>
  </section>

  <section class="download">
    <a href="/Fuck_Exhibition-Catalog-2023.zip" download="Fuck_Exhibition-Catalog-2023.zip">
      <button>Download now</button>
    </a>
    <p><i>Samantha Hiura & Sloane Holzer. F*CK!: Exhibition Catalog. April 2023.</i></p>
  </section>
</BaseLayout>

<style scoped>
  .contents-preview {
    padding-left: 24px; 
    border-left: 1px solid #f5e1ef;
  }
  .contents-preview h2 {
    text-align: left;
  }
  .contents-preview article {
    margin-bottom: 32px;
  }

  .download {
    margin-top: 64px;
  }
  .download p {
    margin-top: 8px;
    font-size: .8rem;
  }

  .download button {
    background-color: #f5e1ef;
    padding: 8px 16px;
    border-radius: 8px;
    cursor: pointer;
  }
  .download button:hover {
    border: 2px solid deeppink;
  }
</style>
